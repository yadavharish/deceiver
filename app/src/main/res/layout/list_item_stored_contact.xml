<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvStoredContactItemCard"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_margin="5dp"
        app:cardElevation="3dp"
        app:strokeColor="@color/theme1Green2"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/theme1White"
        app:strokeWidth="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:strokeColor="@color/theme1Green2"
                        app:cardCornerRadius="15dp"
                        android:backgroundTint="@color/theme1White"
                        app:strokeWidth="1dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/contactName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:singleLine="true"
                                android:fontFamily="@font/red_hat_mono"
                                android:textColor="@color/theme1Green2"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/theme1Green"
                    android:fontFamily="@font/red_hat_mono_medium"
                    android:background="@color/theme1White"
                    android:layout_marginStart="10dp"
                    android:paddingHorizontal="4dp"
                    android:text="contactName"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:strokeColor="@color/theme1Green2"
                        app:cardCornerRadius="15dp"
                        android:backgroundTint="@color/theme1White"
                        app:strokeWidth="1dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/phoneNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:singleLine="true"
                                android:fontFamily="@font/red_hat_mono"
                                android:textColor="@color/theme1Green2"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/theme1Green"
                    android:fontFamily="@font/red_hat_mono_medium"
                    android:background="@color/theme1White"
                    android:layout_marginStart="10dp"
                    android:paddingHorizontal="4dp"
                    android:text="phoneNumber"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btnEditContactsDetails"
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:layout_marginRight="10dp"
                    app:tint="@color/theme1Green2"
                    android:src="@drawable/pencil_square"/>
                <ImageView
                    android:id="@+id/btnDeleteContactsDetails"
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:layout_marginLeft="10dp"
                    app:tint="@color/theme1Green2"
                    android:src="@drawable/ic_trash_outline"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>