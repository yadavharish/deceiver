<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardElevation="5dp"
        app:strokeColor="@color/theme1Green2"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/theme1White"
        app:strokeWidth="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:fontFamily="@font/red_hat_mono_medium"
                    android:textColor="@color/theme1Green2"
                    android:text="number:"/>
                <TextView
                    android:id="@+id/phoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:fontFamily="@font/red_hat_mono"
                    android:textColor="@color/theme1Green2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:fontFamily="@font/red_hat_mono_medium"
                    android:textColor="@color/theme1Green2"
                    android:text="name:"/>
                <TextView
                    android:id="@+id/callerName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:fontFamily="@font/red_hat_mono"
                    android:textColor="@color/theme1Green2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:fontFamily="@font/red_hat_mono_medium"
                    android:textColor="@color/theme1Green2"
                    android:text="type:"/>
                <TextView
                    android:id="@+id/callType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:fontFamily="@font/red_hat_mono"
                    android:textColor="@color/theme1Green2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:fontFamily="@font/red_hat_mono_medium"
                    android:textColor="@color/theme1Green2"
                    android:text="date:"/>
                <TextView
                    android:id="@+id/callDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:fontFamily="@font/red_hat_mono"
                    android:textColor="@color/theme1Green2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:fontFamily="@font/red_hat_mono_medium"
                    android:textColor="@color/theme1Green2"
                    android:text="duration:"/>
                <TextView
                    android:id="@+id/callDuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:fontFamily="@font/red_hat_mono"
                    android:textColor="@color/theme1Green2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btnEditCallLogDetails"
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:layout_marginRight="10dp"
                    app:tint="@color/theme1Green2"
                    android:src="@drawable/pencil_square"/>
                <ImageView
                    android:id="@+id/btnDeleteCallLogDetails"
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:layout_marginLeft="10dp"
                    app:tint="@color/theme1Green2"
                    android:src="@drawable/ic_trash_outline"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>